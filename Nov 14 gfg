
class Solution
{
    public:
    //Function to check if two strings are rotations of each other or not.
    bool areRotations(string s1,string s2)
    {
       string str=s1+s1;
       int left=0;

       int n=str.size();
        if(str.find(s2)!=string::npos)return true;
       else{return false;}
    }
};
