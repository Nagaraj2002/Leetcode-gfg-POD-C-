class Solution {
    public boolean canMakeArithmeticProgression(int[] arr) 
    {
        Arrays.sort(arr);
        //int x=arr[0];
        for(int i=1;i<arr.length-1;i++)
        {
        if(arr[i]-arr[i-1] !=arr[i+1]-arr[i]) //12 26 40 68 96
        return false;
       }
     return true;
    }
}
